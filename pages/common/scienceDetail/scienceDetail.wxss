/* pages/common/scienceDetail/scienceDetail.wxss */

.BGView {
  margin: 10px;
}

.wxParse {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
}

.headerBG {
  margin-top: 20px;
  align-items: center;
}

.titleLable {
  font-size: 20px;
  color: #333;
  font-weight: bold;
}

.tagLable {
  font-size: 12px;
  color: #f29054;
  border: 1rpx solid #f29054;
  border-radius: 10px/50%;
  margin-left: 10px;
  padding: 3px 10rpx 3px 10rpx;
}

.creatTime {
  font-size: 16px;
  color: #999;
}

.authorBG {
  margin-top: 20px;
}

.btn {
  display: flex;
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
  overflow: hidden;
  align-content: center;
  margin-top: 30px;
}

.btn::after{
  border: 0;
}

.btnImg {
  width: 100%;
  height: 100%;
}
